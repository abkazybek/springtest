<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://protocolFileTemplateBrowse.caption"
        focusComponent="protocolFileTemplatesTable"
        messagesPack="com.company.thesissummer.web.ui.protocolfiletemplate">
    <data readOnly="true">
        <collection id="protocolFileTemplatesDc"
                    class="com.company.thesissummer.entity.ProtocolFileTemplate">
            <view extends="_local"/>
            <loader id="protocolFileTemplatesDl">
                <query>
                    <![CDATA[select e from thesissummer$ProtocolFileTemplate e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="protocolFileTemplatesTable"
            spacing="true">
        <filter id="filter"
                applyTo="protocolFileTemplatesTable"
                dataLoader="protocolFileTemplatesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="protocolFileTemplatesTable"
                    width="100%"
                    dataContainer="protocolFileTemplatesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="code"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="protocolFileTemplatesTable.create"/>
                <button id="editBtn" action="protocolFileTemplatesTable.edit"/>
                <button id="removeBtn" action="protocolFileTemplatesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
